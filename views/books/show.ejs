
<div class="container">
  <div class="row">
    <section class= "col-md-6 col-12" >
      <img class="show-image" src="<%= book.image %>" alt="book.title">
    </section>
    <aside class="col-md-6 col-12">
      <h1 class="show-title"><%= book.title %></h1>
      <h4 class="show-info"><strong>Author</strong>: <%= book.author %></h4>
      <h4 class="show-info"><strong>Synopsis</strong>: <%= book.synopsis %></h4>

      <% if (locals.isLoggedIn) { %>
        <a href="/books/<%= book.id %>/edit" class="btn edit-wishlist-button edit-btn">Edit</a>

        <form method="POST" action="/books/<%= book.id %>" class="delete-btn">
          <input type="hidden" name="_method" value="DELETE">
          <button class="btn edit-wishlist-button edit-btn" >Delete</button>
        </form>

        <a class="back-button" href="/books">Back</a>
      <% } %>
    </aside>
  </div>
</div>
