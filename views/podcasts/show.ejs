<h1><%= podcast.title %></h1>
<img src="<%= podcast.image %>" alt="podcast.title">
<h4>Creator: <%= podcast.creator %></h4>
<h4>Synopsis: <%= podcast.synopsis %></h4>
<h4>Link: <%= podcast.link %></h4>

<% if (locals.isLoggedIn) { %>
  <a href="/podcasts/<%= podcast.id %>/edit" class="btn edit-btn btn-secondary">Edit</a>

  <form method="POST" action="/podcasts/<%= podcast.id %>" class="delete-btn">
    <input type="hidden" name="_method" value="DELETE">
    <button class="btn" style="background-color: #eec3c4">Delete</button>
  </form>
<% } %>
