<main class="container">
    <div class="row">
      <section class= "col-8">
        <h3>Edit Wishlist Podcast</h3>
        <form method="POST" action="/podcasts/<%= podcast.id %>">
          <input type="hidden" name="_method" value="PUT">
          <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" value="<%=podcast.title%>" name="title" required>
          </div>
          <div class="form-group">
            <label for="creator">Creator</label>
            <input type="text" class="form-control" id="creator" value="<%=podcast.creator%>" name="creator">
          </div>
          <div class="form-group">
            <label for="synopsis">Synopsis</label>
            <input type="text" class="form-control" id="synopsis" value="<%=podcast.synopsis%>" name="synopsis">
          </div>
          <div class="form-group">
            <label for="link">Link</label>
            <input type="text" class="form-control" id="link" value="<%=podcast.link%>" name="link">
          </div>
          <div class="form-group">
            <label for="image">Image</label>
            <input type="text" class="form-control" id="image" value="<%=podcast.image%>" name="image">
          </div>
          <button type="submit" class="submit-btn btn" style="background-color: #eec3c4">Submit</button>
        </form>
      </section>
    </div>
  </main>
