<main class="container">
  <div class="row">
    <section class= "col-8">
      <h3>New Wishlist Film</h3>
      <form method="POST" action="/films">
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" class="form-control" id="title" placeholder="Title" name="title" required>
        </div>
        <div class="form-group">
          <label for="year">Year</label>
          <input type="text" class="form-control" id="year" placeholder="Year Released" name="year" required>
        </div>
        <div class="form-group">
          <label for="averageRating">Average Rating</label>
          <input type="text" class="form-control" id="averageRating" placeholder="Average Rating" name="averageRating">
        </div>
        <div class="form-group">
          <label for="director">Director</label>
          <input type="text" class="form-control" id="director" placeholder="Director" name="director">
        </div>
        <div class="form-group">
          <label for="synopsis">Synopsis</label>
          <input type="text" class="form-control" id="synopsis" placeholder="Synopsis" name="synopsis">
        </div>
        <div class="form-group">
          <label for="trailer">Trailer</label>
          <input type="text" class="form-control" id="trailer" placeholder="Trailer" name="trailer">
        </div>
        <div class="form-group">
          <label for="image">Image</label>
          <input type="text" class="form-control" id="image" placeholder="Picture of Book (URL)" name="image">
        </div>
        <button type="submit" class="submit-btn btn btn-secondary">Submit</button>
      </form>
    </section>
  </div>
</main>
