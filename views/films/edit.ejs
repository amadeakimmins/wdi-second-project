<main class="container">
    <div class="row">
      <section class= "col-8">
        <h3>Edit Wishlist Film</h3>
        <form method="POST" action="/films/<%= film.id %>">
          <input type="hidden" name="_method" value="PUT">
          <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" value="<%=film.title%>" name="title" required>
          </div>
          <div class="form-group">
            <label for="year">Year</label>
            <input type="text" class="form-control" id="year" value="<%=film.year%>" name="year" required>
          </div>
          <div class="form-group">
            <label for="averageRating">Average Rating</label>
            <input type="text" class="form-control" id="averageRating" value="<%=film.averageRating%>" name="averageRating">
          </div>
          <div class="form-group">
            <label for="director">Director</label>
            <input type="text" class="form-control" id="director" value="<%=film.director%>" name="director">
          </div>
          <div class="form-group">
            <label for="synopsis">Synopsis</label>
            <input type="text" class="form-control" id="synopsis" value="<%=film.synopsis%>" name="synopsis">
          </div>
          <div class="form-group">
            <label for="trailer">Trailer</label>
            <input type="text" class="form-control" id="trailer" value="<%=film.trailer%>" name="trailer">
          </div>
          <div class="form-group">
            <label for="image">Image</label>
            <input type="text" class="form-control" id="image" value="<%=film.image%>" name="image">
          </div>
          <button type="submit" class="submit-btn btn" style="background-color: #eec3c4">Submit</button>
        </form>
      </section>
    </div>
  </main>
