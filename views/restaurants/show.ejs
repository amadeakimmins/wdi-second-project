<div class="container">
  <div class="row">
    <section class= "col-md-6 col-12" >
      <img class="show-restaurant-image" src="<%= restaurant.image %>" alt="restaurant.name">
    </section>
    <aside class="col-md-6 col-12">
      <h1 class="show-title"><%= restaurant.name %></h1>
      <h4 class="show-info"><strong>Cuisine</strong>: <%= restaurant.cuisine %></h4>

      <p class="show-info"><strong>Address:</strong><br>
        <%= restaurant.address.line1 %><br>
        <% if(restaurant.address.line2) { %><%= restaurant.address.line2 %><br><% } %>
        <%= restaurant.address.city %><br>
        <%= restaurant.address.postcode %><br>
        <%= restaurant.address.country %>
      </p>

      <% if (locals.isLoggedIn) { %>
        <a href="/restaurants/<%= restaurant.id %>/edit" class="btn edit-wishlist-button edit-btn">Edit</a>

        <form method="POST" action="/restaurants/<%= restaurant.id %>" class="delete-btn">
          <input type="hidden" name="_method" value="DELETE">
          <a class="btn edit-wishlist-button" >Delete</a>
        </form>

        <form method="POST" action="/wishlists/restaurants">
        <input type="hidden" value="<%= restaurant.id %>" name="id">
        <a class="edit-wishlist-button">Add to Wishlist</a>
        </form>

        <a class="back-button" href="/restaurants">Back</a>
      <% } %>
    </aside>
  </div>
</div>
