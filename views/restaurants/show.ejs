<h1><%= restaurant.name %></h1>
<img src="<%= restaurant.image %>" alt="restaurant.title">
<p>Address:<br>
  <%= restaurant.address.line1 %><br>
  <% if(restaurant.address.line2) { %><%= restaurant.address.line2 %><br><% } %>
  <%= restaurant.address.city %><br>
  <%= restaurant.address.postcode %><br>
  <%= restaurant.address.country %>
</p>
<h4>Cuisine: <%= restaurant.cuisine %></h4>

<% if (locals.isLoggedIn) { %>
  <a href="/restaurants/<%= restaurant.id %>/edit" class="btn edit-btn" style="background-color: #eec3c4">Edit</a>

  <form method="POST" action="/restaurants/<%= restaurant.id %>" class="delete-btn">
    <input type="hidden" name="_method" value="DELETE">
    <button class="btn" style="background-color: #eec3c4">Delete</button>
  </form>
<% } %>
