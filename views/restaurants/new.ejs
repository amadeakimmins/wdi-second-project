<main class="container">
    <div class="row">
      <section class= "col-8">
        <h3>New Wishlist Restaurant</h3>
        <form method="POST" action="/restaurants">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" placeholder="Name" name="name" required>
          </div>
          <fieldset>
            <legend>Address</legend>
            <div class="form-group">
              <label for="line1">Line 1</label>
              <input type="text" class="form-control" name="address[line1]" placeholder="Line 1" id="line1" required>
            </div>
            <div class="form-group">
              <label for="line2">Line 2</label>
              <input type="text" class="form-control" name="address[line2]" placeholder="Line 2" id="line2">
            </div>
            <div class="form-group">
              <label for="city">City</label>
              <input type="text" class="form-control" name="address[city]" placeholder="City" id="City" required>
            </div>
            <div class="form-group">
              <label for="postcode">Postcode</label>
              <input type="text" class="form-control" name="address[postcode]" placeholder="Postcode" id="postcode" required>
            </div>
            <div class="form-group">
              <label for="country">Country</label>
              <input type="text" class="form-control" name="address[country]" placeholder="Country" id="country" required>
            </div>
          </fieldset>
          <div class="form-group">
            <label for="cuisine">Cuisine</label>
            <input type="text" class="form-control" id="cuisine" placeholder="Cuisine" name="cuisine">
          </div>
          <div class="form-group">
            <label for="image">Image</label>
            <input type="text" class="form-control" id="image" placeholder="Picture of Book (URL)" name="image">
          </div>
          <button type="submit" class="submit-btn btn btn-secondary">Submit</button>
        </form>
      </section>
    </div>
  </main>
